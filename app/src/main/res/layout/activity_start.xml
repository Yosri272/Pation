







<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/halaby"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:src="@drawable/imagess" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0.17"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البحث بالتخصص"
            android:id="@+id/textView2"
            android:layout_gravity="right"
            android:layout_row="2"
            android:layout_column="1" />

        <Spinner
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:layout_above="@+id/p"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="56dp"
            android:layout_row="4"
            android:layout_column="1" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0.30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البحث بالعنوان"
            android:id="@+id/textView"
            android:layout_gravity="right"
            android:layout_row="2"
            android:layout_column="1" />

        <Spinner
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:id="@+id/spinner2"
            android:layout_above="@+id/p"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="56dp"
            android:layout_row="4"
            android:layout_column="1" />
    </GridLayout>

    <EditText
        android:id="@+id/p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="أسم الطبيب" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:elevation="1dp"
        android:onClick="btn111"
        android:text="أبحث عن الطبيب"
        android:background="@drawable/rio"
        />


</LinearLayout>